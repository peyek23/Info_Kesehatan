<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:background="@drawable/backgroundtipis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <HorizontalScrollView
                    android:id="@+id/scroll"
                    android:layout_width="382dp"
                    android:layout_height="180dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.916">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="7dp"
                        android:paddingEnd="10dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/kld1klik"
                            android:layout_width="330dp"
                            android:layout_height="170dp"
                            android:layout_margin="7dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="7dp">

                            <TextView
                                android:id="@+id/tanggal"
                                android:layout_width="107dp"
                                android:layout_height="170dp"
                                android:layout_marginBottom="252dp"
                                android:background="#CCE7FF"
                                android:fontFamily="@font/bold"
                                android:hint="12 September 2023"
                                android:inputType="textMultiLine"
                                android:paddingTop="60dp"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textColorHint="#000" />
                            <TextView
                                android:id="@+id/namars"
                                android:layout_width="200dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="252dp"
                                android:fontFamily="@font/bold"
                                android:hint="RS Univ. Islam Indonesia"
                                android:textAlignment="textStart"
                                android:textSize="18sp"
                                android:textColor="#000000"
                                android:textColorHint="#000" />
                            <TextView
                                android:id="@+id/namadokter"
                                android:layout_width="200dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginBottom="252dp"
                                android:fontFamily="@font/regular"
                                android:hint="dr. Muhammad Rizki"
                                android:textAlignment="textStart"
                                android:textSize="16sp"
                                android:textColor="#72B8F9"
                                android:textColorHint="#72B8F9" />

                            <TextView
                                android:id="@+id/diagnosa"
                                android:layout_width="195dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="80dp"
                                android:layout_marginBottom="252dp"
                                android:fontFamily="@font/light_italic"
                                android:hint="Schizophrenia (F20)"
                                android:textAlignment="textStart"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/obat"
                                android:layout_width="195dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="112dp"
                                android:layout_marginBottom="252dp"
                                android:fontFamily="@font/light_italic"
                                android:hint="Chloramphenicol, Paracetamol,  Antasida doen"
                                android:textAlignment="textStart"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="10sp" />


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>

                <EditText
                    android:id="@+id/formcari"
                    android:layout_width="328dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="11dp"
                    android:background="@drawable/form"
                    android:drawableRight="@drawable/cari_icon"
                    android:drawablePadding="14dp"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="Cari"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.688" />

                <ImageView
                    android:id="@+id/profil"
                    android:layout_width="40dp"
                    android:layout_height="44dp"
                    android:background="@drawable/nama_icon"
                    android:backgroundTint="#72B8F9"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.94"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.183" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Riwayat"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/formcari"
                    app:layout_constraintVertical_bias="0.962" />

                <TextView
                    android:id="@+id/lihatsemuariwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Lihat semua"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.955"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/formcari"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/regular"
                    android:text="Selamat Datang"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.079"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.155" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="200dp"
                    android:layout_marginLeft="12dp"
                    android:layout_height="18dp"
                    android:fontFamily="@font/regular"
                    android:hint="Muhammad Rizki"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/scroll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.067"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/daftar"
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold"
                android:text="Daftar                                                                                   Lihat semua"
                android:textColor="#000000" />

            <HorizontalScrollView
                android:id="@+id/scroll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.495">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rs1"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/rs1" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rs2"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/rs2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rs3"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/rs3" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="278dp">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="340dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fktp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </LinearLayout>

                <TextView
                    android:id="@+id/kontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/bold"
                    android:text="Kontak dan Sosial media"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.055"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.01" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.048"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/kontak"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/web" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.108"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/kontak"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/kontak"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/email" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.517"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/kontak"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/instagram" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.058"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/logo_info_kesehatan" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/regular"
                    android:text="Jln. I Gusti Ngurah Rai No.69 Klender Duren Sawit"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.024"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>